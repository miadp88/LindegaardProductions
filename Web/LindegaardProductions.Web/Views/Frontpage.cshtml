@model FrontPageViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid no-space topnav " id="myTopnav">
    @Html.Partial("_Navigation", this.Global.NavigationItems)
    @Html.Partial("_Header")

</div>
    
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <main class="main-content">
                <div class="row">
                    <div class="col-lg-8 col-sm-12">
                        <div class="row">
                            @if (Model.News != null)
                            {
                                foreach (var item in Model.News)
                                {
                                    <!--cards-->
                                    <div class="col-lg-4 col-md-6 col-sm-12">
                                        <div class="card card-animated">
                                            <div class="card-animated__content">
                                                <h1 class="card-animated__title">Lorem ipsum</h1>
                                                <p>
                                                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Soluta dolor praesentium at quod autem
                                                    omnis, amet eaque unde perspiciatis...
                                                </p>
                                                <div class="btn btn-readmore redMorebtn">Læs Mere</div>
                                            </div>
                                            <div class="card-animated__image-container">
                                                <img class="card-animated__image"
                                                     src="https://images.unsplash.com/photo-1519999482648-25049ddd37b1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2126&q=80"
                                                     alt="">
                                            </div>
                                            <svg class="card-animated__svg" viewBox="0 0 800 500">
                                                <path d="M 0 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 800 400 L 800 500 L 0 500"
                                                      stroke="transparent" fill="#353131" />
                                                <path class="card-animated__line"
                                                      d="M 0 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 800 400"
                                                      stroke-width="3" fill="transparent" />
                                            </svg>

                                        </div>
                                    </div>
                                    <!--cards-->
                                }
                            }
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12">
                        <!--Aside-->
                        @Html.Partial("_Aside")
                        <!--Aside-->
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>